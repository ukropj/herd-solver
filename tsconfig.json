{
  "compilerOptions": {   
    "module": "commonjs",
    "target": "es2017",
    "outDir": "out",
    "lib": [
      "esnext"
    ],
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "*.ts"
  ]
}

